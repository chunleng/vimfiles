// This file is referred to when command :CocConfig is entered
{
    // Ultisnips
    "coc.source.ultisnips.priority": 99,
    "tabnine.priority": 98,
    "suggest.languageSourcePriority": 97,
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.preferences.extensionUpdateCheck": "daily",
    "coc.source.around.priority": 1,
    "suggest.triggerAfterInsertEnter": true,

    // ESLint
    "eslint.packageManager": "yarn",
    "eslint.validate": ["javascript","javascriptreact","typescript","typescriptreact","html","vue"],
    "eslint.format.enable": true,

    // Python
    "python.formatting.provider": "black",
    "python.sortImports.path": "isort",
    "pyright.organizeimports.provider": "isort",

    // JSON
    "json.format.enable": true,

    // Outline
    "outline.sortBy": "position",
    "outline.expandLevel": 0,
    "tree.key.activeFilter": "/",
    "tree.key.selectNext": "<C-n>",
    "tree.key.selectPrevious": "<C-p>",
    "tree.key.close": "q",
    "tree.key.toggleSelection": "<tab>",
    "tree.key.toggle": "za",

    "suggest.maxCompleteItemCount": 50,
    "suggest.completionItemKindLabels": {
        "keyword": "",
        "variable": "",
        "value": "\uf89f",
        "operator": "\u03a8",
        "constructor": "\uf0ad",
        "function": "ƒ",
        "reference": "渚",
        "constant": "",
        "method": "",
        "struct": "פּ",
        "class": "",
        "interface": "",
        "text": "",
        "enum": "",
        "enumMember": "",
        "module": "",
        "color": "",
        "property": "",
        "field": "料",
        "unit": "",
        "event": "鬒",
        "file": "",
        "folder": "",
        "snippet": "",
        "typeParameter": "",
        "default": ""
    },
    "suggest.removeDuplicateItems": true,
    "diagnostic.errorSign":"",
    "diagnostic.warningSign":"",
    "diagnostic.infoSign":"",
    "diagnostic.hintSign":"ﯦ",
    "java.completion.maxResults": 20,
    "java.home": "~/.jenv/versions/15",
    "tabnine.limit": 2,
    "yaml.format.enable": true,
    "yaml.schemaStore.enable": true,
    "solargraph.diagnostics": true,
    "solargraph.formatting": true,
    "solargraph.trace.server": "messages",
    "solargraph.commandPath": "~/.rbenv/shims/solargraph",
    "solargraph.logLevel": "debug",
    "workspace.workspaceFolderCheckCwd": true,
    "workspace.bottomUpFiletypes": ["ruby"],
    "html.format.wrapLineLength": 0,
    "html.autoClosingTags": true,
    "markdownlint.config": {
        "MD013": {
            "code_blocks": false,
            "tables": false
        },
        // Allow HTML
        "MD033": false
    },
    // For manual installation
    "languageserver": {
        "terraform": {
            "command": "terraform-ls",
            "args": ["serve"],
            "filetypes": [
                "terraform"
            ],
            "initializationOptions": {},
            "settings": {}
        },
        "purescript": {
            "command": "purescript-language-server",
            "args": ["--stdio"],
            "filetypes": ["purescript"],
            "trace.server": "verbose",
            "rootPatterns": ["bower.json", "psc-package.json", "spago.dhall"],
            "settings": {
                "purescript": {
                    "addSpagoSources": true,
                    "addNpmPath": true // Set to true if using a local purty install for formatting
                    // etc
                }
            }
        }
    }
}
