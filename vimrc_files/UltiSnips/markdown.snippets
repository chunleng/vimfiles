global !p
from datetime import datetime

def get_file_name(default: str='untitled') -> str:
	return snip.basename or default

def zet_header(title=get_file_name().replace("_", " ").title(), tags=[]):
	return (f"# {title}\n\n" +
		f"- created on: {datetime.now().strftime('%Y-%m-%d %X')}\n"
		f"- tags: #{', #'.join(tags)}\n\n" +
		"----\n\n## Main")
def zet_footer():
	return "----\n\n## References"
endglobal

