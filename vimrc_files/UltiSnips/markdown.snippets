def make_header(col):
	col = int(col) if col.isnumeric() else 2
	return f"|{'   |' * col}\n|{'---|' * col}"
def make_body(col, row):
	col = int(col) if col.isnumeric() else 2
	row = int(row) if row.isnumeric() else 2
	return f"|{'   |' * col}" + f"\n|{'   |' * col}" * (row - 1)
