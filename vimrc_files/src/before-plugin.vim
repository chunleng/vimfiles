" Side bar numbering
set number
set relativenumber

set noswapfile

set list
set listchars=tab:»\ ,trail:·,extends:,precedes:,nbsp:+,eol:¶
set fillchars=vert:│,stlnc:\ ,diff:·,eob:\ ,fold:\ ,foldopen:,foldclose:,foldsep:│

" Show statusline always
set laststatus=2

set synmaxcol=160
set textwidth=120

set sidescrolloff=20
set scrolloff=5
set nowrap

let g:mapleader="\<space>"
